@model IEnumerable<Mentoring.Models.Mentor>

@{
    ViewData["Title"] = "Index";
}
<h1 class="mt-3 mb-2">Search For Mentors</h1>
@using (Html.BeginForm("SearchMentor", "Mentors", FormMethod.Get))
    {
        <div class="mt-3 mb-2">
            Find by name: @Html.TextBox("searchString", null,new{@style="width:40%"})  
            <br/>
           Find by subject: @Html.DropDownList("searchSubject", (IEnumerable<SelectListItem>)TempData["Subjects"], "---Select a subject---",
                                               new{@class="mt-2 mb-2"})
            <br/>
               <input  type="submit" value="Search" />
        </div>   
    }

<p>
    <a asp-action="Create">Create New Mentor</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.firstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.studentNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.availableDay)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.availableTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.subject)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.studentNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.availableDay)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.availableTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.mentorId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.mentorId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.mentorId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

